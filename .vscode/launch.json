{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Ambit",
      "url": "http://localhost/ambit/ambit.php?doc=blue.amb",
      "webRoot": "${workspaceFolder}/..",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMapPathOverrides": {
        "/ambit/src/*": "${workspaceFolder}/src/*"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "tsc: watch",
      "trace": true
    }
  ]
}
